<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="150.0" maxWidth="350.0" minHeight="150.0" minWidth="400.0" prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="virhe.IlmoitusController">
   <center>
      <VBox prefHeight="56.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="400.0">
               <children>
                  <ImageView fitHeight="41.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../IlmoitusKuva.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox>
                     <children>
                        <Label fx:id="palvelukeskus" />
                        <Label text="työntekijärekisteriä ei löydy" />
                        <Label text="Haluatko luoda tämän nimisen työntekijärekisterin?">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="44.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Button maxHeight="25.0" maxWidth="175.0" minHeight="25.0" minWidth="175.0" mnemonicParsing="false" onAction="#handleUusi" prefHeight="25.0" prefWidth="175.0" text="Lisää uusi työntekijärekisteri">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="ok" alignment="CENTER" contentDisplay="CENTER" maxHeight="25.0" maxWidth="100.0" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#handleSelva" prefHeight="25.0" prefWidth="100.0" text="Peruuta">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
